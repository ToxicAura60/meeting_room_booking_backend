{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "dist",
    "types": ["node"],
    "sourceMap": true,
    "strict": true,
    "lib": ["ES2022"],

    "esModuleInterop": true,
    "verbatimModuleSyntax": true,

    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}